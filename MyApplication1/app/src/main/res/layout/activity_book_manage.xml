<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_booksort"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.diy.myapplication1.BookManage">
    <FrameLayout
        android:id="@+id/FrameLayout01"
        android:layout_width="match_parent"
        android:layout_height="446dp"
        android:layout_marginLeft="20dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip">
            <Button
                android:id="@+id/btn_insert"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="添加书籍"
                android:textSize="20sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dip">
            <Button
                android:id="@+id/btn_delete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="删除书籍"
                android:textSize="20sp"
                /></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dip">
            <Button
                android:id="@+id/btn_change"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="修改书籍"
                android:textSize="20sp"
                /></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="260dip">
            <Button
                android:id="@+id/btn_find"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="查看书籍"
                android:textSize="20sp"
                /></LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginTop="320dip">
            <TextView
                android:id="@+id/edit_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="20sp"
                android:hint="编号" />
            <TextView
                android:id="@+id/edit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="20sp"
                android:hint="名称" />
            <TextView
                android:id="@+id/edit_Zname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="20sp"
                android:hint="作者名称" />
            <TextView
                android:id="@+id/edit_publish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="20sp"
                android:hint="出版社" />
            <TextView
                android:id="@+id/edit_isbn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="20sp"
                android:hint="ISBN" />
            <TextView
                android:id="@+id/edit_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="20sp"
                android:hint="分类" />
        </LinearLayout>
    </FrameLayout>
        <!-- 显示列表 -->
        <RelativeLayout
            android:id="@+id/Content_Layout"
            android:orientation="horizontal"
            android:layout_above="@id/FrameLayout01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="#EFDFDF" >
            <!-- 显示表内容 -->
            <ListView
                android:id="@+id/listview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >
            </ListView>
        </RelativeLayout>


</LinearLayout>
